<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EPL Info"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnStandingsCurrent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bảng Xếp Hạng Mùa Hiện Tại"
        android:padding="12dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnMatchesCurrent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnMatchesCurrent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lịch Thi Đấu và Kết Quả Mùa Hiện Tại"
        android:padding="12dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btnStandingsCurrent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnStandingsPrevious" />

    <Button
        android:id="@+id/btnStandingsPrevious"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bảng Xếp Hạng Mùa Trước"
        android:padding="12dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btnMatchesCurrent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnMatchesPrevious" />

    <Button
        android:id="@+id/btnMatchesPrevious"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lịch Thi Đấu và Kết Quả Mùa Trước"
        android:padding="12dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btnStandingsPrevious"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>